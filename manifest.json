{
  "manifest_version": 2,
  "name": "Page Redirector",
  "version": "1.0",
  "description": "Redirects to another page when a specific page is accessed",
  "permissions": [
    "webNavigation",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}